{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2017",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ES2017"
    ],
    "types": [
      "svelte",
      "vitest/globals",
      "@playwright/test"
    ],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$app": [".svelte-kit/types"],
      "$app/*": [".svelte-kit/types/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.svelte"
  ],
  "exclude": [
    "node_modules"
  ]
}
